<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs616.studybuddy_mockup" >

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/book"
        android:label="@string/app_name"
        android:logo="@mipmap/book"
        android:theme="@style/MyTheme" >
        <fragment
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </fragment>

        <activity
            android:name=".SessionActivity"
            android:label="@string/title_activity_session" >
        </activity>

        <fragment
            android:name=".ExtraActivity"
            android:label="@string/title_activity_extra" >
        </fragment>
        <fragment
            android:name=".StatisticsActivity"
            android:label="@string/title_activity_statistics" >
        </fragment>

        <activity
            android:name=".CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".SessionList"
            android:label="@string/title_activity_session_list" >
        </activity>
        <fragment
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </fragment>

        <fragment
            android:name=".AccountActivity"
            android:label="@string/Account" >
        </fragment>

        <activity
            android:name=".MainDrawerActivity"
            android:label="@string/title_activity_main_drawer" >

        </activity>

        <service
            android:name=".BubbleActivity"
            android:label="@string/title_activity_bubble" >
        </service>

        <fragment
            android:name=".CreateActivity"
            android:label="@string/title_activity_create" >
        </fragment>
        <activity
            android:name=".LoginManagerFragment"
            android:label="@string/title_activity_login_manager_fragment" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
